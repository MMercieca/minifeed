<% content_for :breadcrumbs do %>
  <%= build_breadcrumbs([ ["/dashboard", "Dashboard"], [nil, 'New Podcast'] ]).html_safe %>
<% end %>
<div class="w-full border border-dark-blue border-4 rounded rounded-lg px-4 bg-white">
  <%= form_with url: main_feeds_url, method: :post, id: "new_main_feed", locals: true do |f| %>
    <fieldset>
      <label for="name">Podcast Name</label>
      <br />
      <div class="text-sm">This will only appear on your dashboard</div>
      <%= f.text_field :name, class: "border border-black rounded-lg w-full px-4" %>
      <br />
      <br />
      <label for="url" class="mt-10">Url</label>
      <div class="text-sm">This is the source that will be split in to smaller feeds</div>
      <%= f.text_field :url, class: "border border-black rounded rounded-full w-full px-4" %>
      <br />
      <br />
      <%= f.submit value: "Create New Feed", style: "display: none;"%>
      <p class="blue-glow btn w-1/4 text-center text-sm bg-dark-blue uppercase text-white font-bold py-2 px-4" onClick="document.getElementById('new_main_feed').submit()">Load Podcast</p>
    </fieldset>
  <% end %>
</div>