<div class="w-full">
  <%= form_with url: main_feeds_url, method: :post, locals: true do |f| %>
    <fieldset class="w-half border border-black p-5 rounded" style="border: 4px solid #1ac0c6">
      <legend class="rounded-full background-white">New Main Feed</legend>
      <label for="name">Feed Name</label>
      <br />
      <div class="text-sm">This will only appear on your dashboard</div>
      <%= f.text_field :name, class: "border border-black rounded rounded-full w-full px-4" %>
      <br />
      <br />
      <label for="url" class="mt-10">Url</label>
      <div class="text-sm">This is the source that will be split in to smaller feeds</div>
      <%= f.text_field :url, class: "border border-black rounded rounded-full w-full px-4" %>
      <br />
      <br />
      <div class="w-full text-right">
        <%= f.submit value: "Create New Feed", class: "py-2 px-4 rounded rounded-full", style: "background-color: #1ac0c6; color: white"%>
      </div>
    </fieldset>
  <% end %>
</div>