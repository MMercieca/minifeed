<div class="flex lg:w-1/3 md:w-1/2 sm:w-full m-auto mb-4 p-2">
  <div class="border border-black w-full h-full">
    <div style="width: 100%; padding-bottom: 100%; background-image: url('<%= feed.image.url %>'); background-size: contain; background-repeat: no-repeat; height: 200px;">
    </div>
    <div class="p-2">
      <div class="text-xl" style="min-height: 3em;"><%= feed.name %></div>
      <div class="text-sm">Last updated <%= feed.polled_at %></div>
      <% if feed.is_a?(MiniFeed) %>
        <div class="text-sm"><%= feed.url %></div>
      <% end %>
    </div>
  </div>
</div>