<% path = local_assigns[:path] %>
<div class="flex lg:w-1/3 md:w-1/2 sm:w-full m-auto mb-4 p-2">
  <div class="border border-black w-full h-full">
    <a href="<%= path %>">
      <div style="width: 100%; padding-bottom: 100%; background-image: url('<%= feed.image.url %>'); background-size: contain; background-repeat: no-repeat;">
      </div>
    </a>
    <div class="p-2">
      <div class="text-xl" style="min-height: 3em;"><%= feed.name %></div>
      <% if feed.respond_to?(:polled_at) %>
        <div class="text-sm">Last updated: <%= format_date(feed.polled_at) %></div>
      <% end %>
      <% if feed.is_a?(MiniFeed) %>
        <textarea class="text-sm w-full px-2" style="resize: none; background-color: transparent;" rows="3"><%= feed.url %></textarea>
      <% end %>
    </div>
  </div>
</div>